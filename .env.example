# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# BSA Online Credentials (will be encrypted)
BSA_USERNAME=your_username
BSA_PASSWORD=your_password

# Encryption key for storing credentials (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your_fernet_key_here

# BSA Configuration
BSA_MUNICIPALITY_UID=305

# Scraping settings
SCRAPE_INTERVAL_HOURS=24
HEADLESS_BROWSER=true

# =============================================================================
# Web Application Configuration
# =============================================================================

# Web App Settings
WEB_SECRET_KEY=your-secret-key-here  # Generate with: python -c "import secrets; print(secrets.token_hex(32))"
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_DEBUG=false

# Twilio SMS (optional - for SMS notifications)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email (optional - for email notifications)
SENDGRID_API_KEY=your_api_key
EMAIL_FROM=noreply@yourdomain.com

# SMTP Email (alternative to SendGrid)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=true
